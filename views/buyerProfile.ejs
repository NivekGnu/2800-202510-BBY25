<%- include("templates/header") %>

<div class="max-w-xl mx-auto p-6 bg-white rounded-2xl shadow-lg mt-12">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center"><%= title %></h1>
  <form action="/profile" method="post" class="space-y-6">
    <div>
      <label class="block text-gray-700 font-medium mb-2" for="firstName">First Name</label>
      <input
        id="firstName"
        name="firstName"
        value="<%= user.firstName %>"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
      >
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2" for="lastName">Last Name</label>
      <input
        id="lastName"
        name="lastName"
        value="<%= user.lastName %>"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
      >
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2" for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        value="<%= user.email %>"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
      >
    </div>

    <div class="text-center">
      <button
        type="submit"
        class="px-6 py-2 bg-green-600 text-white font-semibold rounded-full shadow hover:bg-green-700 transition"
      >
        Save Changes
      </button>
    </div>
  </form>
</div>

<%- include("templates/footer") %>

