<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Egg Product Page</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

</head>
<body class="bg-neutral-900 font-sans">

  <div class="max-w-md mx-auto bg-white min-h-screen relative pb-24"> 

    <!-- Header -->
    <header class="flex justify-between items-center p-4 border-b border-gray-200">
      <div class="w-6 h-6"> 
        <img src="img/arrow.png" alt="Back" class="w-full h-full object-contain">
      </div>
      <div class="w-6 h-6"> 
        <img src="img/cart.png" alt="Cart" class="w-full h-full object-contain">
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="p-4">
      <!-- Product Title & Meta -->
      <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-900">Egg</h1>
        <div class="flex justify-between items-center text-xs text-gray-500 mt-1">
          <div class="flex items-center space-x-1">
            <span>Post made 2 days ago</span>
            <span class="bg-gray-400 rounded-full w-1 h-1 mx-1"></span>
            <span>Burnaby, BC</span>
          </div>
          <div class="flex items-center space-x-1 text-sm text-gray-600">
            <div class="w-4 h-4"> 
              <img src="img/star.png" alt="Rating star" class="w-full h-full object-contain">
            </div>
            <span>4.9 (610)</span>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="h-64 w-full mb-4 rounded-lg overflow-hidden"> 
        <img src="img/egg.jpeg" alt="Eggs" class="h-full w-full object-cover">
      </div>

      <!-- Stock, Price, Qty, Seller -->
      <div class="mb-4">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-xs text-green-600 font-semibold">IN STOCK</p>
            <p id="priceOfItem" class="text-3xl font-bold text-gray-900 mt-1">$5</p>
            <div class="flex items-center space-x-2 mt-3">
              <span class="text-sm text-gray-700">Qty</span>
              <div class="flex items-center border border-gray-300 rounded-md">
                <button onclick="downButton()" class="px-3 py-1 text-gray-800 hover:bg-gray-100 rounded-l-md text-lg font-medium">-</button>
                <span id="item-quality" class="px-4 py-1 border-l border-r border-gray-300 text-gray-900 font-semibold text-base">1</span>
                <button onclick="upButton()" class="px-3 py-1 text-gray-800 hover:bg-gray-100 rounded-r-md text-lg font-medium">+</button>
              </div>
            </div>
          </div>
          <div class="text-right flex-shrink-0 ml-4">
            <div class="w-12 h-12 rounded-full mb-1 ml-auto overflow-hidden"> 
              <img src="img/farmerpfp.png" alt="Seller John Doe" class="w-full h-full object-cover">
            </div>
            <p class="text-sm font-semibold text-gray-800">John Doe</p>
            <p class="text-xs text-gray-500">Seller's Detail</p>
          </div>
        </div>
      </div>

      <hr class="my-4 border-gray-200">

      <!-- Description -->
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-800 mb-2">Description</h2>
        <p class="text-sm text-gray-700 leading-relaxed">
          Farm-fresh eggs with rich yolks and smooth whites – perfect for breakfast, baking, or adding protein-packed goodness to any meal.
        </p>
      </div>

      <hr class="my-4 border-gray-200">

      <!-- Map Placeholder -->
      <div class="mb-4">
        <div id="map" class="h-48 w-128 z-0 rounded-lg"></div>

        </div>
      </div>

    </main>

    <!-- Sticky Chat Footer -->
    <footer class="fixed bottom-0 left-0 right-0">
      <div class="max-w-md mx-auto p-3">
        <button class="bg-neutral-800 hover:bg-neutral-700 text-white py-3 px-6 rounded-md w-full flex justify-between items-center text-lg font-semibold">
          <span>Chat</span>
          <div class="w-7 h-6 bg-white rounded-sm">
          </div>
        </button>
      </div>
    </footer>

  </div>

  <!-- Leaflet library -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <script>
  
 let itemQuality = 1;
  let itemPrice = 5;

  function updatePrice() {
    const totalPrice = (itemQuality * itemPrice).toFixed(2);
    document.getElementById("priceOfItem").innerText = `$${totalPrice}`;
  }

  function upButton() {
    itemQuality += 1;
    document.getElementById("item-quality").innerText = itemQuality;
    updatePrice(); // update price after increasing
  }

  function downButton() {
    if (itemQuality > 1) {
      itemQuality -= 1;
      document.getElementById("item-quality").innerText = itemQuality;
      updatePrice(); // update price after decreasing
    }
  }

</script>

  <!-- Map Scripts -->
  <script>
    // Default Burnaby when loading in
    const map = L.map('map').setView([49.24871980930831, -122.98067289034908], 12);

    const accessToken = '<%= mapboxToken %>';

    // We can change to "streets-v11", "outdoors-v11", "satellite-v9", etc for different map views
    const mapboxStyle = 'mapbox/streets-v12';

    L.tileLayer(`https://api.mapbox.com/styles/v1/${mapboxStyle}/tiles/{z}/{x}/{y}?access_token=${accessToken}`, {
        tileSize: 512,
        zoomOffset: -1,
        attribution: '© <a href="https://www.mapbox.com/about/maps/">Mapbox</a> © <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
        accessToken: accessToken
    }).addTo(map);

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
        (position) => {
          const latitude = position.coords.latitude;
          const longitude = position.coords.longitude;
          console.log(`Latitude: ${latitude}, Longitude: ${longitude}`);

          const marker = L.marker([latitude, longitude]).addTo(map);
          marker.bindPopup("<b>Your current location</b>").openPopup();
        },
        (error) => {
          console.error("Error getting location:", error.message);
        }
      );
    } else {
      console.error("Geolocation is not supported by this browser.");
    }
  </script>

</body>
</html>