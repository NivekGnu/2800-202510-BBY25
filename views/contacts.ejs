        <!-- Contacts List -->
        <main class="flex-grow">
            <% if (contacts && contacts.length > 0) { %>
                <ul role="list" class="divide-y divide-gray-200">
                    <% contacts.forEach(contact => { %>
                        <li class="contact-item">
                            <a href="/chat?with=<%= contact._id.toString() %>" class="block p-4">
                                <div class="flex items-center space-x-4">
                                    <div class="flex-shrink-0">
                                        <% if (contact.profilePictureUrl) { %>
                                            <img class="h-10 w-10 rounded-full object-cover" src="<%= contact.profilePictureUrl %>" alt="<%= contact.firstName %> profile">
                                        <% } else { %>
                                            <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-gray-400">
                                                <span class="font-medium leading-none text-white">
                                                    <%= (contact.firstName ? contact.firstName[0] : '') %><%= (contact.lastName ? contact.lastName[0] : '') %>
                                                </span>
                                            </span>
                                        <% } %>
                                    </div>
                                    <div class="min-w-0 flex-1">
                                        <p class="truncate text-sm font-medium text-gray-900">
                                            <%= contact.firstName || 'User' %> <%= contact.lastName || '' %>
                                        </p>
                                        <p class="truncate text-sm text-gray-500">
                                            Click to view chat
                                        </p>
                                    </div>
                                    <div>
                                        <i class="fas fa-chevron-right text-gray-400"></i>
                                    </div>
                                </div>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <%# THIS IS THE "NO CHAT ROOMS" MESSAGE BLOCK %>
                <div class="text-center text-gray-500 py-10 px-4 flex flex-col items-center justify-center h-full"> <%# Added flex for centering %>
                    <i class="far fa-comments text-5xl mb-4 text-gray-400"></i> <%# Slightly larger icon and margin %>
                    <p class="text-lg text-gray-700 font-semibold">No Conversations Yet</p>
                    <p class="mt-2 text-sm text-gray-500">
                        Start a chat by finding a product and contacting the seller,
                        <br>or wait for someone to message you!
                    </p>
                    <a href="/" class="mt-6 inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
                        Browse Products
                    </a>
                </div>
            <% } %>
        </main>