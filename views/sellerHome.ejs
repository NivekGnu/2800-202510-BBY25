<%- include('templates/header') %>

<div class="flex flex-col min-h-screen bg-gray-50">
  <!-- HEADER -->
  <header class="flex-none p-4 bg-white shadow">
    <div class="flex items-center justify-between">
      <h1 class="text-lg font-semibold">SELLER HOME PAGE</h1>
      <button
        id="signout"
        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition"
      >
        Sign out
      </button>
    </div>
  </header>

  <script>
    // sign out
    document.getElementById("signout")
      .addEventListener("click", () => window.location.href = "/logout");

    // geolocation → city
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(async ({ coords }) => {
        const { latitude, longitude } = coords;
        const res = await fetch(
          `https://api.mapbox.com/geocoding/v5/mapbox.places/${longitude},${latitude}.json?access_token=<%= mapboxToken %>`
        );
        const json = await res.json();
        const place = json.features.find(f => f.place_type.includes('place'));
        document.getElementById('city').textContent = place?.text || 'Unknown';
      }, () => {
        document.getElementById('city').textContent = 'Permission denied';
      });
    } else {
      document.getElementById('city').textContent = 'Geolocation not supported';
    }
  </script>

  <!-- MAIN -->
  <main class="flex-1 overflow-auto px-4 py-6">
    <p class="mb-4">
      Your city:
      <span id="city" class="font-medium">Detecting…</span>
    </p>

    <%- include('templates/navbar_seller') %>

    <section class="mt-8">
      <h2 class="text-2xl font-semibold mb-4">All Available Postings</h2>

      <% if (postings.length === 0) { %>
        <p class="text-gray-600">There are currently no postings yet.</p>
      <% } else { %>
        <div class="grid grid-cols-2 gap-6">
          <% postings.forEach(p => { %>
            <!-- card wrapper -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col h-full">

              <!-- thumbnail -->
              <div class="w-full aspect-square bg-gray-100 overflow-hidden">
                <img
                  src="<%= p.thumbSrc %>"
                  alt="Thumbnail of <%= p.produce %>"
                  class="w-full h-full object-cover object-center"
                >
              </div>

              <!-- product name centered -->
              <div class="flex-1 flex flex-col justify-center items-center p-4">
                <h3 class="text-xl font-medium truncate"><%= p.produce %></h3>
              </div>

              <!-- edit button -->
              <div class="px-4 pb-4">
                <a
                  href="/post/<%= p.id %>/edit"
                  class="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition"
                >
                  Edit
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>
  </main>

  <%- include('templates/footer') %>
</div>
